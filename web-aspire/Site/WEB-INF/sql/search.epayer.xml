<?xml version="1.0"?>

<xaf>
	<sql-statements package="search.epayer">
		<statement name="id">
			App::Statements::Search::Epayer
		</statement>

		<statement name="sel_id">
			
			SELECT *
			FROM ref_epayer
			WHERE
			UPPER(id) LIKE UPPER(?) AND psource = ?
			AND rownum &lt;= 250
			ORDER BY name

			<params>
				<param value="request:psource"/>
			</params>
			<report>
				<column heading="Payer ID" url=""/>
				<column heading="Name"/>
			</report>
			<!--
				columnDefn => {
					0 => {
						hAlign => 'left'
						head => 'Payer ID'
						url => 'javascript:chooseItem('/search/epayer/id/#&{?}#', '#&{?}#', false)'

					}
					1 => {
						head => 'Name'

					}

				}

			-->
		</statement>

		<statement name="sel_id2">
			
			SELECT *
			FROM ref_epayer
			WHERE
			UPPER(id2) LIKE UPPER(?)
			AND rownum &lt;= 250
			ORDER BY name

			<report>
				<column heading="Payer ID" url=""/>
				<column heading="Name"/>
			</report>
			<!--
				columnDefn => {
					0 => {
						hAlign => 'left'
						head => 'Payer ID'
						url => ''

					}
					1 => {
						head => 'Name'

					}

				}

			-->
		</statement>

		<statement name="sel_name">
			
			SELECT *
			FROM ref_epayer
			WHERE
			UPPER(name) LIKE UPPER(?) AND psource = ? 
			AND rownum &lt;= 250
			ORDER BY name

			<params>
				<param value="request:psource"/>
			</params>
			<report>
				<column heading="Payer ID" url=""/>
				<column heading="Name"/>
			</report>
			<!--
				columnDefn => {
					0 => {
						hAlign => 'left'
						head => 'Payer ID'
						url => ''

					}
					1 => {
						head => 'Name'

					}

				}

			-->
		</statement>

	</sql-statements>
</xaf>