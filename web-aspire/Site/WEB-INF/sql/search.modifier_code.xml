<?xml version="1.0"?>

<xaf>
	<sql-statements package="search.modifier_code">
		<statement name="id">
			App::Statements::Search::Code
		</statement>

		<statement name="sel_modifier_code">
			
			SELECT abbrev, caption
			FROM hcfa1500_modifier_code
			WHERE
			abbrev = ?
			AND rownum &lt; 250

			<params>
				<param value="request:abbrev"/>
			</params>
			<report>
				<column heading="Code" url=""/>
				<column heading="Name"/>
			</report>
			<!--
				columnDefn => {
					0 => {
						head => 'Code'
						url => 'javascript:chooseEntry('#&{?}#')'

					}
					1 => {
						head => 'Name'

					}

				}

			-->
		</statement>

		<statement name="sel_modifier_code_like">
			
			SELECT abbrev, caption
			FROM hcfa1500_modifier_code
			WHERE
			abbrev like ?
			AND rownum &lt; 250

			<params>
				<param value="request:param0"/>
			</params>
			<report>
				<column heading="Code" url=""/>
				<column heading="Name"/>
			</report>
			<!--
				columnDefn => {
					0 => {
						head => 'Code'
						url => ''

					}
					1 => {
						head => 'Name'

					}

				}

			-->
		</statement>

		<statement name="sel_modifier_name">
			
			SELECT abbrev, caption
			FROM hcfa1500_modifier_code
			WHERE
			upper(caption) = ?
			AND rownum &lt; 250

			<params>
				<param value="request:caption"/>
			</params>
			<report>
				<column heading="Code" url=""/>
				<column heading="Name"/>
			</report>
			<!--
				columnDefn => {
					0 => {
						head => 'Code'
						url => ''

					}
					1 => {
						head => 'Name'

					}

				}

			-->
		</statement>

		<statement name="sel_modifier_name_like">
			
			SELECT abbrev, caption
			FROM hcfa1500_modifier_code
			WHERE
			upper(caption) like ?
			AND rownum &lt; 250

			<params>
				<param value="request:param0"/>
			</params>
			<report>
				<column heading="Code" url=""/>
				<column heading="Name"/>
			</report>
			<!--
				columnDefn => {
					0 => {
						head => 'Code'
						url => ''

					}
					1 => {
						head => 'Name'

					}

				}

			-->
		</statement>

	</sql-statements>
</xaf>