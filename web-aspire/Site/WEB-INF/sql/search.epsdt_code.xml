<?xml version="1.0"?>

<xaf>
	<sql-statements package="search.epsdt_code">
		<statement name="id">
			App::Statements::Search::Code
		</statement>

		<statement name="sel_epsdt_code">
			
			SELECT epsdt,name,description
			FROM ref_epsdt
			WHERE
			epsdt = ?
			AND rownum &lt; 250

			<params>
				<param value="request:epsdt"/>
			</params>
			<report>
				<column heading="Code" url="javascript:chooseEntry('#&{?}#')"/>
				<column heading="Description"/>
			</report>
			<!--
				columnDefn => {
					0 => {
						head => 'Code'
						url => 'javascript:chooseEntry('#&{?}#')'

					}
					1 => {
						head => 'Description'

					}

				}

			-->
		</statement>

		<statement name="sel_epsdt_code_like">
			
			SELECT epsdt,name,description
			FROM ref_epsdt
			WHERE
			epsdt like ?
			AND rownum &lt; 250

			<report>
				<column heading="Code" url="javascript:chooseEntry('#&{?}#')"/>
				<column heading="Description"/>
			</report>
			<!--
				columnDefn => {
					0 => {
						head => 'Code'
						url => 'javascript:chooseEntry('#&{?}#')'

					}
					1 => {
						head => 'Description'

					}

				}

			-->
		</statement>

		<statement name="sel_epsdt_description">
			
