<?xml version="1.0"?>

<!-- QDL Query Definition Language -->

<component>
	<query-defn id="Organization" abbrev="org">

		<!-- Fields -->
		<field id="id" caption="Org ID" view="org" column="org_id"/>
		<field id="row_number" caption="Row" column="rownum"/>
		<field id="name" caption="Name" view="org" column="name_primary"/>
		<field id="trade_name" caption="Trade Name" view="org" column="name_trade"/>
		<field id="tax_id" caption="Tax ID" view="org" column="tax_id"/>
		<field id="categories" caption="Categories" view="org" column="category"/>
		<field id="time_zone" caption="Time Zone" view="org" column="time_zone"/>
		<field id="mailing_address_line_1" caption="Mailing Address - Line 1" view="org_addr_mail" column="line1"/>
		<field id="mailing_address_line_2" caption="Mailing Address - Line 2" view="org_addr_mail" column="line2"/>
		<field id="mailing_address_city" caption="Mailing Address - City" view="org_addr_mail" column="city"/>
		<field id="mailing_address_state" caption="Mailing Address - State" view="org_addr_mail" column="state"/>
		<field id="mailing_address_zip" caption="Mailing Address - Zip Code" view="org_addr_mail" column="zip"/>
		<field id="street_address_line_1" caption="Street Address - Line 1" view="org_addr_street" column="line1"/>
		<field id="street_address_line_2" caption="Street Address - Line 2" view="org_addr_street" column="line2"/>
		<field id="street_address_city" caption="Street Address - City" view="org_addr_street" column="city"/>
		<field id="street_address_state" caption="Street Address - State" view="org_addr_street" column="state"/>
		<field id="street_address_zip" caption="Street Address - Zip Code" view="org_addr_street" column="zip"/>
		<field id="payment_address_line_1" caption="Payment Address - Line 1" view="org_addr_payment" column="line1"/>
		<field id="payment_address_line_2" caption="Payment Address - Line 2" view="org_addr_payment" column="line2"/>
		<field id="payment_address_city" caption="Payment Address - City" view="org_addr_payment" column="city"/>
		<field id="payment_address_state" caption="Payment Address - State" view="org_addr_payment" column="state"/>
		<field id="payment_address_zip" caption="Payment Address - Zip Code" view="org_addr_payment" column="zip"/>
		<field id="any_address_line_1" caption="Any Address - Line 1" view="org_addr_any" column="line1"/>
		<field id="any_address_line_2" caption="Any Address - Line 2" view="org_addr_any" column="line2"/>
		<field id="any_address_city" caption="Any Address - City" view="org_addr_any" column="city"/>
		<field id="any_address_state" caption="Any Address - State" view="org_addr_any" column="state"/>
		<field id="any_address_zip" caption="Any Address - Zip Code" view="org_addr_any" column="zip"/>
		<field id="primary_phone" caption="Primary Phone Number" view="org_attr_pphone" column="value_text"/>
		<field id="billing_phone" caption="Billing Phone Number" view="org_attr_billing" column="value_text"/>
		<field id="primary_fax" caption="Primary Fax Number" view="org_attr_pfax" column="value_text"/>
		<field id="any_phone" caption="Any Phone Number" view="org_attr_aphone" column="value_text"/>
		<field id="billing_contact" caption="Billing Contact" view="org_attr_billing" column="value_textb"/>
		<field id="category" caption="Category" view="org_category" column="member_name"/>
		<field id="owner_org_id" caption="Owner Org ID" view="org" column="owner_org_id"/>
		<field id="created" caption="Date Created" view="org" column="cr_stamp"/>
		<field id="createdby" caption="Created By" view="org" column="cr_user_id" lookup-url="/lookup/person"/>

		<!-- Views -->
		<view id="org" table="org" autoinclude="1"/>
		<view id="org_category" table="org_category" condition="org_category.parent_id (+) = org.org_internal_id"/>
		<view id="org_addr_mail" table="org_address" condition="org_addr_mail.parent_id (+) = org.org_internal_id AND org_addr_mail.address_name (+) = 'Mailing'"/>
		<view id="org_addr_street" table="org_address" condition="org_addr_street.parent_id (+) = org.org_internal_id AND org_addr_street.address_name (+) = 'Street'"/>
		<view id="org_addr_payment" table="org_address" condition="org_addr_shipping.parent_id (+) = org.org_internal_id AND org_addr_shipping.address_name (+) = 'Payment'"/>
		<view id="org_addr_any" table="org_address" condition="org_addr_any.parent_id (+) = org.org_internal_id"/>
		<view id="org_attr_pphone" table="org_attribute" condition="org_attr_pphone.parent_id (+) = org.org_internal_id AND org_attr_pphone.value_type (+) = #constant.ATTRTYPE_PHONE# AND org_attr_pphone.item_name (+) = 'Primary'"/>
		<view id="org_attr_billing" table="org_attribute" condition="org_attr_billing.parent_id (+) = org.org_internal_id AND org_attr_billing.value_type (+) = #constant.ATTRTYPE_BILLING_PHONE# AND org_attr_billing.item_name (+) = 'Contact Information'"/>
		<view id="org_attr_pfax" table="org_attribute" condition="org_attr_pfax.parent_id (+) = org.org_internal_id AND org_attr_pfax.value_type (+) = #constant.ATTRTYPE_FAX# AND org_attr_pfax.item_name (+) = 'Primary'"/>
		<view id="org_attr_aphone" table="org_attribute" condition="org_attr_aphone.parent_id = org.org_internal_id AND org_attr_aphone.value_type IN (#constant.ATTRTYPE_PHONE#, #constant.ATTRTYPE_BILLING_PHONE#)"/>

		<!-- Styles -->
		<output-style id="default">
			<column id="row_number"/>
			<column id="id"/>
			<column id="name"/>
			<column id="categories"/>
			<order-by id="upper({name})"/>
			<order-by id="upper({id})"/>
			<condition field="owner_org_id" comparison="is" criteria="#session.org_internal_id#"/>
		</output-style>
		<output-style id="department" distinct="yes">
			<column id="row_number"/>
			<column id="id"/>
			<column id="name"/>
			<column id="categories"/>
			<order-by id="upper({name})"/>
			<order-by id="upper({id})"/>
			<and-conditions>
				<condition field="owner_org_id" comparison="is" criteria="#session.org_internal_id#"/>
				<condition field="category" comparison="is" criteria="Department"/>
			</and-conditions>
		</output-style>
		<output-style id="employer" distinct="yes">
			<column id="row_number"/>
			<column id="id"/>
			<column id="name"/>
			<column id="categories"/>
			<order-by id="upper({name})"/>
			<order-by id="upper({id})"/>
			<and-conditions>
				<condition field="owner_org_id" comparison="is" criteria="#session.org_internal_id#"/>
				<condition field="category" comparison="is" criteria="Employer"/>
			</and-conditions>
		</output-style>
		<output-style id="insurance" distinct="yes">
			<column id="row_number"/>
			<column id="id"/>
			<column id="name"/>
			<column id="categories"/>
			<order-by id="upper({name})"/>
			<order-by id="upper({id})"/>
			<and-conditions>
				<condition field="owner_org_id" comparison="is" criteria="#session.org_internal_id#"/>
				<condition field="category" comparison="is" criteria="Insurance"/>
			</and-conditions>
		</output-style>
		<output-style id="provider" distinct="yes">
			<column id="row_number"/>
			<column id="id"/>
			<column id="name"/>
			<column id="categories"/>
			<order-by id="upper({name})"/>
			<order-by id="upper({id})" order="desc"/>
			<and-conditions>
				<condition field="owner_org_id" comparison="is" criteria="#session.org_internal_id#"/>
				<or-conditions>
					<condition field="category" comparison="is" criteria="Practice"/>
					<condition field="category" comparison="is" criteria="Facility/Site"/>
					<condition field="category" comparison="is" criteria="Clinic"/>
				</or-conditions>
			</and-conditions>
		</output-style>

	</query-defn>
</component>

